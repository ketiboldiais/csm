{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"lib": ["DOM", "ES2018"],
		"outDir": "dist",
		"importHelpers": true,
		"declaration": true,
		"declarationDir": "types",
		"sourceMap": false,
		"rootDir": "src",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"moduleResolution": "node",
		"allowJs": false,
		"jsx": "react",
		"noImplicitAny": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true
	},
	"include": ["src"],
	"exclude": [],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	}
}
